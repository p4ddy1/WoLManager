{% extends "layout/main.html.twig" %}
{% block title %}WoLManager - Login{% endblock %}
{% block content %}
    {% if loggedIn == false and error == false %}
        <div class="pure-g">
            <div class="pure-u-1-3">
                <div class="alert alert-error">
                    Please log in to continue!
                </div>
            </div>
        </div>
    {% elseif loggedIn and success == false %}
        <div class="pure-g">
            <div class="pure-u-1-3">
                <div class="alert alert-info">
                    You are already logged in!
                </div>
            </div>
        </div>
        <div class="pure-g top-buffer">
            <div class="pure-u-1-3">
                <a href="/logout" class="pure-button button-red">Logout</a>
            </div>
        </div>
    {% endif %}
    {% include "include/loginform.html.twig" %}
{% endblock %}