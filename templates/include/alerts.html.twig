{% if error is defined %}
    <div class="pure-g">
        <div class="pure-u-1-3">
            <div class="alert alert-error">
                {{ error }}
            </div>
        </div>
    </div>
{% endif %}
{% if success is defined %}
    <div class="pure-g">
        <div class="pure-u-1-3">
            <div class="alert alert-success">
                {{ success }}
            </div>
        </div>
    </div>
{% endif %}